{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES5",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "lib": ["es2018", "es2015", "dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
